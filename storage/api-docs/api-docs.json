{
    "openapi": "3.0.0",
    "info": {
        "title": "Augmented Things",
        "description": "Augmented Things it's a project developed by @Jatapiaro",
        "contact": {
            "email": "jatapiaro@gmail.com"
        },
        "version": "1"
    },
    "paths": {
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Profile"
                ],
                "summary": "Register a new user",
                "requestBody": {
                    "description": "User to be registered",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/User"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Data with token_type, exprires_at and the acces and refresh token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        },
        "/api/v1/me": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Shows the current user profile",
                "responses": {
                    "200": {
                        "description": "Shows the user profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "title": "User",
                "description": "user model",
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation",
                    "client_id",
                    "client_secret"
                ],
                "properties": {
                    "name": {
                        "schema": "User",
                        "description": "Name of the user",
                        "type": "string"
                    },
                    "email": {
                        "schema": "User",
                        "description": "Email of the user",
                        "type": "string"
                    },
                    "password": {
                        "schema": "User",
                        "description": "Password of the user",
                        "type": "string",
                        "format": "password"
                    },
                    "password_confirmation": {
                        "schema": "User",
                        "description": "Password confirmarion of the user",
                        "type": "string",
                        "format": "password"
                    },
                    "client_id": {
                        "schema": "User",
                        "description": "Id of the client fromt which this user is being registered",
                        "type": "integer"
                    },
                    "client_secret": {
                        "schema": "User",
                        "description": "Secret key of the client id",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "oauth2",
                "description": "Laravel passport oauth2 security.",
                "in": "header",
                "scheme": "https",
                "flows": {
                    "password": {
                        "authorizationUrl": "http://localhost:8000/oauth/authorize",
                        "tokenUrl": "http://localhost:8000/oauth/token",
                        "refreshUrl": "http://localhost:8000/token/refresh",
                        "scopes": []
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "User registration",
            "description": "Operations for the user registration"
        },
        {
            "name": "Profile",
            "description": "Operations related to the user profile"
        }
    ]
}
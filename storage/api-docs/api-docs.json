{
    "openapi": "3.0.0",
    "info": {
        "title": "Augmented Things",
        "description": "Augmented Things it's a project developed by @Jatapiaro",
        "contact": {
            "email": "jatapiaro@gmail.com"
        },
        "version": "1"
    },
    "paths": {
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Profile"
                ],
                "summary": "Register a new user",
                "requestBody": {
                    "description": "User to be registered",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/User"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Data with token_type, exprires_at and the acces and refresh token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        },
        "/api/v1/devices": {
            "get": {
                "tags": [
                    "Devices"
                ],
                "summary": "Shows the user devices",
                "responses": {
                    "200": {
                        "description": "Shows the current user devices",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            },
            "post": {
                "tags": [
                    "Devices"
                ],
                "summary": "Register a new device",
                "requestBody": {
                    "description": "Device that needs to be stored",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "device": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/Device"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Device that was registered.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        },
        "/api/v1/me": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "Shows the current user profile",
                "responses": {
                    "200": {
                        "description": "Shows the user profile",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        },
        "/api/v1/places": {
            "get": {
                "tags": [
                    "Places"
                ],
                "summary": "Shows the user places",
                "responses": {
                    "200": {
                        "description": "Shows the current user places",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            },
            "post": {
                "tags": [
                    "Places"
                ],
                "summary": "Register a new place",
                "requestBody": {
                    "description": "Place that needs to be stored",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "place": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/Place"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Device that was registered.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "passport": [
                            "*"
                        ]
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Device": {
                "title": "Device",
                "description": "Devices registered by the user in the system",
                "required": [
                    "name",
                    "latitude",
                    "longitude",
                    "altitude",
                    "type_id"
                ],
                "properties": {
                    "name": {
                        "schema": "Device",
                        "description": "Name of the device",
                        "type": "string"
                    },
                    "latitude": {
                        "schema": "Device",
                        "description": "Latitude of the device (coordinates)",
                        "type": "number",
                        "example": "19.4284700"
                    },
                    "longitude": {
                        "schema": "Device",
                        "description": "Longitude of the device (coordinates)",
                        "type": "number",
                        "example": "-99.1276600"
                    },
                    "altitude": {
                        "schema": "Device",
                        "description": "Altitude of the device (coordinates)",
                        "type": "number"
                    },
                    "type_id": {
                        "schema": "Device",
                        "description": "Reference to the valid device",
                        "type": "string",
                        "example": "350043001147343438323536"
                    }
                },
                "type": "object"
            },
            "Place": {
                "title": "Places",
                "description": "Places registered by the user",
                "required": [
                    "name",
                    "latitude",
                    "longitude",
                    "altitude"
                ],
                "properties": {
                    "name": {
                        "schema": "Place",
                        "description": "Name of the place",
                        "type": "string"
                    },
                    "latitude": {
                        "schema": "Place",
                        "description": "Latitude of the place (coordinates)",
                        "type": "number",
                        "example": "19.4284700"
                    },
                    "longitude": {
                        "schema": "Place",
                        "description": "Longitude of the place (coordinates)",
                        "type": "number",
                        "example": "-99.1276600"
                    },
                    "altitude": {
                        "schema": "Place",
                        "description": "Altitude of the place (coordinates)",
                        "type": "number"
                    }
                },
                "type": "object"
            },
            "Type": {
                "title": "Type",
                "description": "Types of valid devices and his types on the system",
                "required": [
                    "id",
                    "type"
                ],
                "properties": {
                    "id": {
                        "schema": "Type",
                        "description": "ID of the particle device",
                        "type": "string"
                    },
                    "type": {
                        "schema": "Type",
                        "description": "Type of device",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "description": "user model",
                "required": [
                    "name",
                    "email",
                    "password",
                    "password_confirmation",
                    "client_id",
                    "client_secret"
                ],
                "properties": {
                    "name": {
                        "schema": "User",
                        "description": "Name of the user",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "schema": "User",
                        "description": "Email of the user",
                        "type": "string",
                        "example": "test@test.com"
                    },
                    "password": {
                        "schema": "User",
                        "description": "Password of the user",
                        "type": "string",
                        "format": "password",
                        "example": "password"
                    },
                    "password_confirmation": {
                        "schema": "User",
                        "description": "Password confirmarion of the user",
                        "type": "string",
                        "format": "password",
                        "example": "password"
                    },
                    "client_id": {
                        "schema": "User",
                        "description": "Id of the client from which this user is being registered",
                        "type": "integer",
                        "example": "1"
                    },
                    "client_secret": {
                        "schema": "User",
                        "description": "Secret key of the client id",
                        "type": "string",
                        "example": "2h37cn2028ebncsw92173bc91"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "oauth2",
                "description": "Laravel passport oauth2 security.",
                "in": "header",
                "scheme": "https",
                "flows": {
                    "password": {
                        "authorizationUrl": "http://localhost:8000/oauth/authorize",
                        "tokenUrl": "http://localhost:8000/oauth/token",
                        "refreshUrl": "http://localhost:8000/token/refresh",
                        "scopes": []
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "User registration",
            "description": "Operations for the user registration"
        },
        {
            "name": "Devices",
            "description": "Operations related with the user devices"
        },
        {
            "name": "Profile",
            "description": "Operations related to the user profile"
        },
        {
            "name": "Places",
            "description": "Operations related with the user places"
        }
    ]
}